{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["import", "jsx-a11y", "react-hooks"],
  "extends": [
    "eslint-config-synacor", 
    "plugin:import/errors",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "indent": [
      "warn",
      2
    ],
    "brace-style": [
      "error",
      "1tbs"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "import/no-unresolved": [2, { "ignore": ["style", "styles", "css"] }]
  }
}